<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @restaurant %>

  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li
        class="list-group-item"><%= review.content %> - <%= review.rating %>/5
        <%= link_to "Delete",
          restaurant_review_path(review),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </li>
    <% end %>
  </ul>
  <br>

  <div>
    <%= link_to "Add a Review", new_restaurant_review_path(@restaurant) %>
    <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
    <%= link_to "Back to restaurants", restaurants_path %>

    <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
  </div>

</div>
